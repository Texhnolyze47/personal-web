---
const {skillName, skillList} = Astro.props
---
<div class="skills__item">

    <h3>{skillName}</h3>

    <ul>
        {skillList.map((skill) => (
            <li>{skill}</li>
        ))}
</div>

<style>

    .skills__item {
        padding: 1.5rem;
        border: 1px solid #e5e7eb;
    }

    .skills__item  h3 {
        color: var(--primary-text);
        padding-bottom: 1rem;
    }

    .skills__item  ul {
        color: var(--secodary-text);
    }

</style>