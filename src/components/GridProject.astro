---
import { getTranslator } from "src/i18n/utils";
import GridProjectElement from "./GridProjectElement.astro";

const translateLabels = getTranslator(Astro.currentLocale);
const projectData = translateLabels("projects.list");
---
<div class="container-projects">

    {projectData.map((project) => (
        <GridProjectElement projectName={project.projectName} description={project.description} />
    ))}


</div>

<style>
    .container-projects {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(min(100%, 450px), 1fr));
        gap: 1rem;
    }
</style>